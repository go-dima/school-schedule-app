# Environment Configuration for Docker Local Testing
NODE_ENV=development

# Vite Configuration
VITE_APP_TITLE=School Schedule Management System (Docker)

# Local PostgreSQL Database Configuration (Docker)
# These settings match the Dockerfile.postgres configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=school_schedule
DB_USER=postgres
DB_PASSWORD=postgres
DB_URL=postgresql://postgres:postgres@localhost:54320/school_schedule

# Mock Supabase Configuration for Local Testing
# Note: These are dummy values for local PostgreSQL testing
# The app will need to be adapted to work with raw PostgreSQL instead of Supabase
VITE_SUPABASE_URL=http://localhost:3000/api
VITE_SUPABASE_ANON_KEY=mock_anon_key_for_local_testing

# Development Settings
VITE_DEV_MODE=true
VITE_DOCKER_MODE=true

# PostgreSQL Connection for Raw SQL (if needed)
POSTGRES_CONNECTION_STRING=postgresql://postgres:postgres@localhost:54320/school_schedule

# Docker Settings
DOCKER_DB_CONTAINER_NAME=school-schedule-postgres
DOCKER_DB_IMAGE=school-schedule-db:latest